rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Demo-Zugriff für öffentliche Bereiche
    match /clubs/{clubId} {
      allow read: if true;
    }
    
    match /clubs/{clubId}/mitglieder/{memberId} {
      allow read, write: if true;
    }
    
    match /clubs/{clubId}/contributions/{contributionId} {
      allow read, write: if true;
    }
    
    match /clubs/{clubId}/shooting_logs/{logId} {
      allow read, write: if true;
    }
    
    match /clubs/{clubId}/tasks/{taskId} {
      allow read, write: if true;
    }
    
    match /clubs/{clubId}/training/{trainingId} {
      allow read, write: if true;
    }
    
    match /clubs/{clubId}/service_plans/{planId} {
      allow read, write: if true;
    }
    
    // Geschützte Admin-Bereiche - nur für authentifizierte Benutzer
    match /user_permissions/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /clubs/{clubId}/pending_users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}